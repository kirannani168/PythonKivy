<WidgetsExample>
    cols:3
    ToggleButton:
        text: root.toggle_state_text
        size_hint: None, 1
        width: "100dp"
        on_state: root.showing_state(self)
    Button:
        text: "Hello"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.txt
    Switch:
        id: my_switch
        on_active: root.on_swicth_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: my_slider
        min:0
        max:100
        value: 40
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        padding: "20dp", "20dp"
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:

            max: 100
            value: my_slider.value
    TextInput:
        id: my_textinput
        text: "Helloo"
        size_hint: None, 1
        width: "100dp"
    Label:
        text: my_textinput.text


