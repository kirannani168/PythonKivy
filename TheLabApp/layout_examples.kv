<StackLayoutExample>


<GridLayoutExample>:
    cols:2
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "20dp", "10dp"
        Button:
            text: "BoxLayout in GridLayout"
            on_press: root.change_text()
        Button:
            text: root.btn_txt
    Button:
        text: "B"
    Button:
        text: "C"
    Button:
        text: "D"


<AnchorLayoutExample>
    anchor_x: "center"
    anchor_y: "top"
    Button:
        text:"Hello"
        size: "100dp", "200dp"
        size_hint: None, None
    GridLayout:
        cols: 2
        spacing: "20dp"
        Button:
            text: "AnchoLauout"
        Button:
            text: "B"
        Button:
            text: "C"
        Button:
            text: "D"
        BoxLayout:
            Button:
                text: "A"
            Button:
                text: "B"
            Button:
                text: "C"
            Button:
                text: "D"
        Button:
            text: "Hello"


<BoxLayoutExample>
